# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database
USE_DATABASE=true

# Server Configuration
PORT=3001
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# Supabase (for integration features)
SUPABASE_URL=your-supabase-url
SUPABASE_API_KEY=your-supabase-api-key

# ONDC Configuration
ONDC_REGISTRY_URL=https://registry.ondc.org
ONDC_SUBSCRIBER_ID=your-subscriber-id
ONDC_SUBSCRIBER_URL=https://your-api-domain.com/ondc
ONDC_SIGNING_PRIVATE_KEY=your-private-key
ONDC_SIGNING_PUBLIC_KEY=your-public-key
ONDC_ENCRYPTION_PRIVATE_KEY=your-encryption-private-key
ONDC_ENCRYPTION_PUBLIC_KEY=your-encryption-public-key

# Feature Flags
ENABLE_ONDC_GATEWAY=true
ENABLE_ANALYTICS=true